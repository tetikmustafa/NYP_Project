<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox id="root1" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #534f50;" stylesheets="@mainstill.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nyp_proje.SignupScene">
   <children>
      <VBox id="root" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="30.0" style="-fx-background-color: #534f50;" stylesheets="@mainstill.css">
         <children>
            <TextField fx:id="signupUsername" alignment="CENTER" maxHeight="30.0" maxWidth="150.0" minHeight="30.0" minWidth="150.0" promptText="Username">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
            <TextField fx:id="signupPassword" alignment="CENTER" maxHeight="30.0" maxWidth="150.0" minHeight="30.0" minWidth="150.0" promptText="Password">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
            <Button alignment="CENTER" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#handleSignup" text="Signup" />
            <Button alignment="CENTER" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#turnBack" text="Back" />
            <Label fx:id="warn" alignment="CENTER" maxHeight="30.0" maxWidth="150.0" minHeight="50.0" minWidth="500.0" textFill="RED">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</HBox>
